---
interface Props {
	href: string;
	variant?: 'primary' | 'secondary';
	class?: string;
	size?: 'default' | 'lg';
}

const { href, variant = 'primary', size = 'default', class: className = '' } = Astro.props;

const sizeClasses = {
	default: 'px-6 py-2.5',
	lg: 'px-8 py-3'
};

const baseClasses = 'inline-flex items-center justify-center gap-2 rounded-md text-center transition-colors font-medium';
const variantClasses = {
	primary: 'bg-primary text-white hover:bg-primary-hover',
	secondary: 'bg-secondary text-white hover:bg-secondary/90'
};
---

<a
	href={href}
	class:list={[
		baseClasses,
		variantClasses[variant],
		sizeClasses[size],
		className
	]}
>
	<slot />
</a>