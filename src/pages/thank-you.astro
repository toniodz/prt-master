---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

const meta = {
  title: "Thank You | Reprocess Your Pain",
  description: "Thank you for contacting us. We'll get back to you soon."
};
---

<Layout {...meta}>
  <div class="relative bg-gradient-to-b from-primary/5 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="max-w-2xl mx-auto text-center">
        <div class="flex justify-center mb-8">
          <svg class="w-20 h-20 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Message Sent Successfully!</h1>
        
        <p class="text-xl text-gray-600 mb-12">
          Thank you for reaching out. I'll get back to you as soon as possible.
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <Button href="/">Return to Home</Button>
          <Button href="/booking" variant="secondary">Book an Appointment</Button>
        </div>
      </div>
    </div>
  </div>
</Layout>