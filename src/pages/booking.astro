---
import Layout from '../layouts/Layout.astro';

const meta = {
  title: "Book Your Consultation | Reprocess Your Pain",
  description: "Book your free 15-minute consultation to discuss how Pain Reprocessing Therapy can help you overcome chronic pain."
};
---

<Layout {...meta}>
  <div class="relative bg-gradient-to-b from-primary/5 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-center">Book Your Consultation</h1>
      <p class="text-xl text-gray-600 mb-8 text-center max-w-2xl mx-auto">
        Take the first step towards lasting relief from chronic pain
      </p>
    </div>
  </div>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <iframe 
        id='cliniko-36054621' 
        src='https://caroline-j-davies-physiotherapy.uk2.cliniko.com/bookings?embedded=true' 
        frameborder='0' 
        scrolling='auto' 
        width='100%' 
        height='1000' 
        style='pointer-events: auto;'
      ></iframe>
    </div>
  </section>
</Layout>

<script>
  window.addEventListener('message', function handleIFrameMessage (e) {
    var clinikoBookings = document.getElementById('cliniko-36054621');
    if (typeof e.data !== 'string') return;
    if (e.data.search('cliniko-bookings-resize') > -1) {
      var height = Number(e.data.split(':')[1]);
      clinikoBookings.style.height = height + 'px';
    }
    e.data.search('cliniko-bookings-page') > -1 && clinikoBookings.scrollIntoView();
  });
</script>