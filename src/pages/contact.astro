---
import Layout from '../layouts/Layout.astro';

const meta = {
  title: "Contact Me | Reprocess Your Pain",
  description: "Get in touch to book your consultation or ask any questions about pain reprocessing therapy."
};
---

<Layout {...meta}>
  <div class="relative bg-gradient-to-b from-primary/5 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Me</h1>
          <p class="text-xl text-gray-600 mb-8">
            I am here to help. Reach out to me with any questions or to book your 15 min Free Consultation Call.
          </p>
          
          <!-- Netlify Form -->
          <form 
            name="contact"
            method="POST"
            data-netlify="true"
            netlify
            action="/thank-you/"
            class="space-y-6"
          >
            <input type="hidden" name="form-name" value="contact" />
            
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary/20"
                required
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary/20"
                required
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary/20"
                required
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-primary text-white px-6 py-3 rounded-md hover:bg-primary-hover transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>

        <div class="space-y-8">
          <div class="bg-gradient-to-br from-white via-primary/5 to-primary/10 p-8 rounded-[10px] border border-gray-100 shadow-[0_1px_2px_rgba(0,0,0,0.06)] hover:scale-[1.02] hover:-translate-y-1 transition-all duration-300">
            <h3 class="text-[1.3125rem] font-semibold mb-6 text-[#1A1A1A]">Contact Information</h3>
            <ul class="space-y-4 text-gray-700">
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect width="20" height="16" x="2" y="4" rx="2"/>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                </svg>
                <a href="mailto:caroline@reprocessyourpain.com" class="hover:text-primary">
                  caroline@reprocessyourpain.com
                </a>
              </li>
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                <a href="tel:02034887360" class="hover:text-primary">
                  0203 488 7360
                </a>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                <div>
                  9, Coldbath Square<br />
                  Farringdon, London<br />
                  EC1R 5HL
                </div>
              </li>
            </ul>
          </div>

          <div class="bg-gradient-to-br from-white via-primary/5 to-primary/10 p-8 rounded-[10px] border border-gray-100 shadow-[0_1px_2px_rgba(0,0,0,0.06)] hover:scale-[1.02] hover:-translate-y-1 transition-all duration-300">
            <h3 class="text-[1.3125rem] font-semibold mb-6 text-[#1A1A1A]">Opening Hours</h3>
            <ul class="space-y-2 text-gray-700">
              <li>Mon & Tues: Closed</li>
              <li>Wed: 9am-6pm (In-person & Online)</li>
              <li>Thu: Online appointments only</li>
              <li>Fri: 9am-6pm (In-person & Online)</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>